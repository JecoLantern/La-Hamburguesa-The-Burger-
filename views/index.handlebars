
<div class="row">
    <div class="col-xs-12">
        <h1>Eat The Burger!!</h1>
    </div>
</div>

<div class="row">
    <div class="col-xs-12 col-sm-4">
        <h2>Ready</h2>
        <ul>
            {{#each burgers}}
                {{#unless this.devoured}}
                <li class="holder">
                    <h4>{{this.burger_name}}</h4>
                    <form action="/{{this.id}}?_method=PUT" method="POST">
                        <input type="hidden" name="devoured" value="true">
                        <button type="submit" class="btn btn-danger btn-sm">EAT IT!</button>
                    </form>
                </li>
                {{/unless}}
            {{/each}}
        </ul>
    </div>

    <div class="col-xs-12 col-sm-4">
        <img src='../public/assets/img/burger.png' alt="Burger Pic">

        <h2>Add a Burger</h2>
        <form class="create-update-form add-form" action="/" method="POST">
            <div class="form-group">
                <label for="burger" class="sr-only">Burger Name: </label>
                <input type="text" id="burger" name="name" placeholder="Burger Name" class="form-control" maxlength="30">
            </div>
            <button type="submit" class="btn btn-danger">Add A Burger!</button>
        </form>
    </div>

    <div class="col-xs-12 col-sm-4">
        <h2>Eaten</h2>
        <ul>
            {{#each burgers}}
                {{#if this.devoured}}
                    <li class="holder">
                        <h4>{{this.burger_name}}</h4>
                        <form action="/{{this.id}}?_method=PUT" method="POST">
                            <input type="hidden" name="devoured" value="false">
                            <button type="submit" class="btn btn-danger btn-sm">MAKE ANOTHER ONE!</button>
                        </form>
                    </li>
                {{/if}}
            {{/each}}
        </ul>
    </div>
</div>
